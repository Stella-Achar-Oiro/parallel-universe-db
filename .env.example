# Parallel Universe Database - Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/parallel_universe_db

# Tiger Cloud Configuration (Optional - for production forks)
TIGER_SERVICE_ID=your-main-service-id
TIGER_CLI_AVAILABLE=false

# Anthropic API (OPTIONAL - not required, agents use rule-based strategies)
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Frontend URL (for CORS)
# Local development:
FRONTEND_URL=http://localhost:5173
# Production (set on Render):
# FRONTEND_URL=https://paralleluniversedb.vercel.app

# Optional: Enable debug logging
DEBUG=false

# Fast mode: Skip slow DB operations for instant results (recommended for production/demos)
FAST_MODE=true
